{
   "boxColor": {
      "type": "colorchooser",
      "default": "rgb(0,0,0)",
      "description": "Box color:",
      "tooltip": "Set the custom box's color."
   },
   "fontColor": {
      "type": "colorchooser",
      "default": "white",
      "description": "Font color:",
      "tooltip": "Set the custom text color."
   },
   "textSize": {
      "default": 9,
      "type": "spinbutton",
      "min": 2,
      "max": 14,
      "description": "Text Note font size:",
      "units": "pixels",
      "step": 1,
      "tooltip": "Increase or decrease the text Note font size."
   },
   "fontFamily": {
      "type": "entry",
      "default": "",
      "description": "Text Note font family:",
      "tooltip": "The text Note font family."
   },
   "transparency": {
      "type": "scale",
      "default": 0.5,
      "min": 0.0,
      "max": 1.0,
      "step": 0.05,
      "description": "Opacity:",
      "tooltip": "Select a opacity percent."
   },
   "borderBoxWidth": {
      "default": 1,
      "type": "spinbutton",
      "min": 0,
      "max": 4,
      "description": "Border's box width:",
      "units": "pixels",
      "step": 1,
      "tooltip": "Increase or decrease the border's box width."
   },
   "borderBoxColor": {
      "type": "colorchooser",
      "default": "white",
      "description": "Border's box color:",
      "tooltip": "Set the custom border box's color."
   },
   "fixWidth": {
      "default": true,
      "description": "Fixed width.",
      "type": "checkbox",
      "tooltip": "Check this if you want to control the width of desklet."
   },
   "width": {
      "default": 170,
      "type": "spinbutton",
      "min": 100,
      "max": 1600,
      "description": "Width:",
      "units": "pixels",
      "step": 10,
      "indent": true,
      "dependency": "fixWidth",
      "tooltip": "Increase or decrease the desklet width."
   }
}
