{
   "stripe": {
      "type": "combobox",
      "description": "Selected theme of paper sheet:",
      "default": "None",
      "tooltip": "Select a theme of paper sheet to show in Notes.",
      "options": {
         "None": "None",
         "Double Stripe": "doublestripe"
      }
   },
   "staples": {
      "type": "combobox",
      "description": "Selected theme of staples:",
      "default": "None",
      "tooltip": "Select theme of staples.",
      "options": {
         "None": "None",
         "Double Staple": "doublestaple"
      }
   },
   "boxColor": {
      "type": "colorchooser",
      "default": "rgb(0,0,0)",
      "description": "Box color:",
      "tooltip": "Set the custom box's color."
   },
   "fontColor": {
      "type": "colorchooser",
      "default": "white",
      "description": "Font color:",
      "tooltip": "Set the custom text color."
   },
   "textSize": {
      "default": 12,
      "type": "spinbutton",
      "min": 10,
      "max": 30,
      "description": "Font size:",
      "units": "pixels",
      "step": 1,
      "tooltip": "Increase or decrease the font size of Note text."
   },
   "fontFamily": {
      "type": "entry",
      "default": "",
      "description": "Font family:",
      "tooltip": "Select a Font family to use in Notes."
   },
   "transparency": {
      "type": "scale",
      "default": 0.5,
      "min": 0.0,
      "max": 1.0,
      "step": 0.05,
      "description": "Opacity:",
      "tooltip": "Select a opacity percent."
   },
   "borderBoxWidth": {
      "default": 1,
      "type": "spinbutton",
      "min": 0,
      "max": 4,
      "description": "Border's box width:",
      "units": "pixels",
      "step": 1,
      "tooltip": "Increase or decrease the border's box width."
   },
   "borderBoxColor": {
      "type": "colorchooser",
      "default": "white",
      "description": "Border's box color:",
      "tooltip": "Set the custom border box's color."
   },
   "fixWidth": {
      "default": true,
      "description": "Fixed width.",
      "type": "checkbox",
      "tooltip": "Check this if you want to control the width of desklet."
   },
   "width": {
      "default": 170,
      "type": "spinbutton",
      "min": 100,
      "max": 1600,
      "description": "Width:",
      "units": "pixels",
      "step": 10,
      "indent": true,
      "dependency": "fixWidth",
      "tooltip": "Increase or decrease the desklet width."
   }
}
